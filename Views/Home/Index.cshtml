@{
ViewData["Title"] = "Home Page";
}
<head>
    <link href="css/site.css">
</head>
<div class="container form-size-sm mt-5">
    <h3>Регистрационные данные</h3>
    <form class="" asp-controller="Info" asp-action="AddContact" method="post">
        <input class="form-control mb-3" type="text" name="firstName" placeholder="Имя" />
        <input class="form-control mb-3" type="text" name="lastName" placeholder="Фамилия" />
        <input class="form-control mb-3" type="text" name="middleName" placeholder="Отчество" />
        <input class="form-control mb-3" type="number" name="phoneNumber" placeholder="Номер телефона" />
        <button class="btn btn-primary" type="submit">Зарегестрироваться</button>
    </form>
</div>


